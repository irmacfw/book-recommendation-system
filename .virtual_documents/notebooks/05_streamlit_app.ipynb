# --- Cluster composition preview ---
cluster_summary = (
    df.groupby(["cluster", "genre"])
    .agg(
        Count=("title", "count"),
        Avg_Rating=("avg_rating", "mean"),
        Avg_Price_EUR=("price", "mean")
    )
    .reset_index()
)

